@page
@model UrlShortener.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Url Shortener";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

        h1 {
            color: #333333;
        }

        form {
            margin-top: 20px;
        }

        input[type="text"] {
            width: 80%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #cccccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }

        p {
            color: #333333;
        }

        .short-url {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .short-url a {
                display: inline-block;
                padding: 5px 10px;
                background-color: #f4f4f4;
                border: 1px solid #cccccc;
                border-radius: 4px;
                text-decoration: none;
                color: #333333;
                font-family: monospace;
            }

                .short-url a:hover {
                    background-color: #e9e9e9;
                }

        /* New CSS for validation message */
        .validation-message {
            color: #d9534f;
            font-size: 0.9em;
            margin-top: 5px;
            display: block;
            margin-bottom: 10px;
        }
    </style>
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text);
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Url Shortener</h1>

        <p>Enter a URL to shorten:</p>

        <form method="post">
            <input type="text" asp-for="InputUrl" placeholder="Input URL" />
            <span asp-validation-for="InputUrl" class="validation-message"></span>
            <button type="submit">Shorten</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ShortUrl))
        {
            <div class="short-url">
                <a href="#" onclick="copyToClipboard('@Model.ShortUrl'); return false;">@Model.ShortUrl</a>
            </div>
        }
    </div>
</body>
</html>
